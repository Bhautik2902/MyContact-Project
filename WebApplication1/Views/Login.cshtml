@{
    ViewData["Title"] = "Login";
}

<head>

</head>
<body>
    <div class="overlay-section">
        <div class="content">
            <div class="auth-container">
                <div class="closeIcon">
                    <a asp-action="Index" asp-controller="Home"><img src="~/images/close.png" alt="Close button image"></a>
                </div>
                <div class="auth-header">
                    <span>Login</span>
                </div>
                <div class="auth-form">
                    <form class="login" id="form" onsubmit="return validateLogin()" method="GET" asp-action="Details">
                        <div class="credentials">
                            <input class="textfields field-login" type="text" placeholder="Email" id="email" name="email">
                            <span id="email_error"></span>

                            <input class="textfields" type="password" placeholder="Password" id="pass" name="password">
                            <span id="pass_error"></span>
                        </div>
                        <div class="button-section">
                            <button class="button-secondary submit-login">Log in</button>
                        </div>
                        <div class="server-error">
                            <small>@TempData["errormsg"]</small>
                        </div>
                    </form>
                </div>

                <div class="link">
                    <p>Don't have an account? <a asp-action="Signup" asp-controller="Signup">Sign up</a></p>
                </div>
            </div>
        </div>
    </div>

    
</body>

